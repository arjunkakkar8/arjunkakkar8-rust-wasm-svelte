{
	"name": "rust-wasm-svelte",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"wasm": "wasm-pack build ./rust --target web && cp -r ./rust/pkg/ ./src/lib/assets/wasm/",
		"dev": "npm run wasm && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.0",
		"svelte": "^3.54.0",
		"svelte-check": "^2.9.2",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vite-plugin-wasm": "^3.1.1"
	},
	"type": "module"
}